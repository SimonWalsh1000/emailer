<p id="notice"><%= notice %></p>

<h1>Listing Lists: count  = <%= @result %></h1>


<%= form_tag lists_path, :method => :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Sent</th>
      <th>Country</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.first_name %></td>
        <td><%= list.last_name %></td>
        <td><%= list.email %></td>
        <td><%= Check.all.map(&:email).include? list.email %></td>
        <td><%= list.country %></td>
        <td><%= list.interest %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
